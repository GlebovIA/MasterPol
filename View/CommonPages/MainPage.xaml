<Page x:Class="MasterPol.View.CommonPages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPol.View.CommonPages"
      mc:Ignorable="d" 
      Title="MainPage">

    <Grid Background="#ffffff">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="#F4E8D3" Grid.Row="0">
            <Image Source="../../Resources/Images/Мастер пол.png" HorizontalAlignment="Left" Margin="5"/>
            <Label VerticalContentAlignment="Center" Margin="50, 0, 0, 0">
                <TextBlock Text="Мастер Пол" Foreground="#67BA80" FontSize="24" FontWeight="Black" FontFamily="SegoiUI"/>
            </Label>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal">

            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Frame x:Name="listFrame"/>
        </Grid>
    </Grid>
</Page>
